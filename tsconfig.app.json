{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["vite/client"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": [
  "src/**/*",
  "vite.config.ts"        
],

  "exclude": ["node_modules", "dist"]
}
